import "jvm_op.stg"

yapl(name, statements) ::= <<

.class public <name>
.super java/lang/Object

.method public static main([Ljava/lang/String;)V
	.limit stack 	512
	.limit locals 	512

	<statements; separator="\n">

	return
.end method



>>


declareVar(constant, type, offset) ::= <<
<constant>
<type>store <offset>
>>



assign(type, offset, expression) ::= <<
<expression>
dup
<type>store		<offset>
>>

number(num) ::= "ldc 		<num>"


